@model UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        margin: 0px;
        font-family: var(--bs-font-sans-serif);
        padding: 0px;
    }

    .modal-backdrop {
        opacity: 0.5 !important;
    }

    .page-title-header {
        text-align: center;
        padding-top: 15px;
        padding-bottom: 15px;
        margin: 0px;
        background-color: lemonchiffon;
        border-bottom: 3px solid whitesmoke;
    }
</style>

<div class="page-title-header">
    <h2>Parking Management System</h2>
</div>

<div class="row" style="margin-top: 50px;">
    <div class="container-fluid col-3">
        <form asp-controller="home" asp-action="Login" method="post">
            <h4 style="text-align:center;" class="p-2">User Login</h4>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="mb-3">
                <label class="form-label" asp-for="UserName">Enter UserName</label>
                <input class="form-control" type="text" asp-for="UserName" Id="ParkingSpotNumber" autocomplete="off" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password">Enter Password</label>
                <input class="form-control" type="password" asp-for="Password" Id="ParkingSpotNumber" autocomplete="off" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

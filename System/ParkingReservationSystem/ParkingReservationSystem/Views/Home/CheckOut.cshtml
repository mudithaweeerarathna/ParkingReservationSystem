@model ParkingSpotHoldModel

@{
    ViewData["Title"] = "CheckOut";
    ViewBag.PageTitle = "Check Out";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <form asp-controller="home" asp-action="CheckOutCalculation" method="post">
                <div class="mb-3">
                    <label class="form-label">Enter Parking Id Number: </label>
                    <input class="form-control" type="text" name="PstId" asp-for="PstId" autocomplete="off" required placeholder="PSTID-001"/>
                </div>
                <button class="btn btn-outline-danger" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
